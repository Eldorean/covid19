{
    "env": {
        "browser": true,
        "es2021": true,
        "mocha": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "mocha",
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "no-unused-vars": "off",
        "no-use-before-define": [0],
        "no-useless-constructor": [0],
        
        "@typescript-eslint/no-use-before-define": [1],
        "@typescript-eslint/no-unused-vars": ["error"]
    }
}
